<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mapper:映射器
    1.namespace="": 本文件用来管理namespace所指接口，主要实现接口中声明的方法。
    2.select: 实现一个查询操作。
    3.id: namespace接口中的方法名。
    4.resulttype: 返回的结果类型。如果没有不需要写。
    5.parameterType: 该方法输入的参数类型。
    6.insert: 表示添加。
    -->
<mapper namespace="cn.kevin.stu.manage.mapper.SubjectMapper">
    <insert id="addSubject" parameterType="Subject">
        INSERT INTO Subject (subId, subName, subTeacherId, subCredit)
        SELECT #{subId}, #{subName}, #{subTeacherId}, #{subCredit}
        WHERE NOT EXISTS(SELECT * FROM subject WHERE subId=#{subId}) LIMIT 1
    </insert>
    <delete id="deleteSubjectById" parameterType="Integer">
        DELETE FROM Subject
        WHERE subId = #{subId}
    </delete>
    <update id="updateSubject" parameterType="Subject">
        UPDATE Subject SET subName = #{subName}, subTeacherId = #{subTeacherId}, subCredit = #{subCredit}
        WHERE subId = #{subId}
    </update>
    <select id="selectSubject" parameterType="Integer" resultType="Subject">
        SELECT * FROM Subject
        WHERE  subId = #{subId}
    </select>
    <select id="selectAllSubject" resultType="Subject">
        SELECT * FROM Subject
    </select>
</mapper>
